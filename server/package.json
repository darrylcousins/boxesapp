{
  "name": "boxesapp",
  "version": "0.0.1",
  "description": "A boxes app from shopify",
  "private": true,
  "scripts": {
    "build": "npm run build:client",
    "build:client": "vite build --config config/vite.js --outDir dist/client > /dev/null 2>&1",
    "debug": "node --inspect-brk src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js --watch ./src",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=production node src/index.js",
    "start": "npm run serve",
    "worker": "concurrently --kill-others \"npm run worker:api\" \"npm run worker:mail\"",
    "worker:api": "node --trace-warnings -r dotenv/config src/bull/api-worker.js",
    "worker:mail": "node --trace-warnings -r dotenv/config src/bull/mail-worker.js",
    "worker:image": "node --trace-warnings -r dotenv/config src/bull/image-worker.js",
    "test": "SHOP=test-shop.myshopify.com vitest --config config/vite.js --reporter=verbose"
  },
  "nodemonConfig": {
    "ext": "js,jsx,html,scss,json"
  },
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/darrylcousins/boxesapp.git"
  },
  "keywords": [
    "shopify"
  ],
  "author": "Darryl Cousins <darryljcousins@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/darrylcousins/boxesapp/issues"
  },
  "homepage": "https://github.com/darrylcousins/boxesapp#readme",
  "devDependencies": {
    "@b9g/crank": "^0.5.7",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.1.0",
    "cross-env": "^7.0.3",
    "crossroads": "^0.12.2",
    "dotenv": "^16.4.4",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "highlight.js": "^11.9.0",
    "inquirer": "^9.2.14",
    "isomorphic-fetch": "^3.0.0",
    "liquidjs": "^10.10.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "markdown-it": "^14.0.0",
    "mjml": "^4.15.3",
    "mongo-mock": "^4.2.0",
    "mongodb": "6.3",
    "morgan": "^1.10.0",
    "msw": "^2.2.0",
    "nodemailer": "^6.9.9",
    "nodemon": "^3.0.3",
    "promise-throttle": "^1.1.2",
    "sass": "^1.70.0",
    "serve-static": "^1.15.0",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.4",
    "tachyons": "^4.12.0",
    "vite": "^2.9.9",
    "vitest": "^0.19.1",
    "winston": "^3.11.0",
    "winston-mongodb": "^5.1.1"
  },
  "dependencies": {
    "bullmq": "^5.1.11"
  }
}
